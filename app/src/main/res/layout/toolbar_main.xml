<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:padding="@dimen/padding_16dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/menu_personal_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_person_white_36dp" />

    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/messenger"
        android:layout_centerVertical="true"
        android:id="@+id/menu_messenger_main"
        android:layout_toLeftOf="@+id/menu_notification_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/menu_notification_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_notifications_white_36dp" />
</RelativeLayout>